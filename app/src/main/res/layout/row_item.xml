<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/lt_bg_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/lt_bg_language_selector" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="15dp">
            <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/source_lang" android:layout_width="0dp" android:layout_height="match_parent" android:text="LT_Language" android:layout_weight="1" android:fontFamily="@font/roboto"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/interchange" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/lt_ic_exchange"/>
            <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/target_lang" android:layout_width="0dp" android:layout_height="match_parent" android:text="LT_Language" android:layout_weight="1" android:fontFamily="@font/roboto"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp">
            <TextView android:ellipsize="marquee" android:id="@+id/source_text" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Text text, Text text, Text text, Text text, Text text, Text text, " android:maxLength="60" android:layout_toLeftOf="@+id/separator" android:fontFamily="@font/roboto"/>
            <View android:id="@+id/separator" android:background="#40000000" android:layout_width="0.5dp" android:layout_height="50dp" android:layout_marginTop="5dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
            <TextView android:ellipsize="marquee" android:id="@+id/target_text" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Text text, Text text, Text text, Text text, Text text, Text text, " android:maxLength="60" android:layout_toRightOf="@+id/separator" android:fontFamily="@font/roboto" android:layout_marginStart="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
